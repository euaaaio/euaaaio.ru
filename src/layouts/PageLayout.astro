---
import Layout from './Layout.astro'
import Footer from '@/components/Footer.astro'
import Header from '@/components/Header.astro'

interface Props {
	name: string
	title: string
	description: string
}

const {
	name,
	title,
	description,
} = Astro.props
---

<Layout
	title={title}
	description={description}
>
	<Header name={name} />
	<slot />
	<Footer />
</Layout>
