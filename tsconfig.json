{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@theme": ["./content/.vitepress/theme"]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "env.d.ts",
    "api/**/*",
    "content/**/*",
    "content/.vitepress/**/*"
  ]
}
